@model AdSetDesafio.Web.Models.VeiculoCadastroViewModel
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12 col-sm-12">

            <div class="ibox" style="padding: 40px;">
                <div class="ibox-title" style="text-align:left;">
                    <h5>Cadastro de Veículo</h5>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>

                    @using (Html.BeginForm("CadastrarNovoVeiculo", "Veiculo", FormMethod.Post, new { id = "frmDados", @autocomplete = "off", enctype = "multipart/form-data" }))
                    {
                    @Html.TextBoxFor(l => l.Id, new { @class = "form-control", id ="Id", value="0", Style = "display: none;"})
                    <div class="form-group">
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                <label for="Marca">Marca</label>
                                @Html.TextBoxFor(l => l.Marca, new { @class = "form-control ", placeholder = "Marca", @maxlength = 255, id = "Marca" })
                                @* @Html.ValidationMessageFor(m => m.Marca, "", new { @class = "error" })*@


                            </div>
                            <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                <label for="Modelo">Modelo</label>
                                @Html.TextBoxFor(l => l.Modelo, new { @class = "form-control ", placeholder = "Modelo", @maxlength = 255, id = "Modelo" })
                            </div>

                        </div>
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="Ano">Ano</label>
                                    @Html.TextBoxFor(m => m.Ano, new { @class = "form-control", type="number", id = "Ano", placeholder = "Ano", Style = "height:34px;" })
                                </div>

                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="Placa">Placa</label>
                                    @Html.TextBoxFor(m => m.Placa, new { @class = "form-control", id = "Placa", placeholder = "Placa", Style = "height:34px;" })
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="Km">Km</label>
                                    @Html.TextBoxFor(m => m.Km, new { @class = "form-control", type = "number", id = "Km", placeholder = "Km", Style = "height:34px;" })
                                </div>

                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="Cor">Cor</label>
                                    @Html.TextBoxFor(m => m.Cor, new { @class = "form-control", id = "Cor", placeholder = "Cor", Style = "height:34px;" })
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="Preco">Preço</label>
                                    @Html.TextBoxFor(m => m.Preco, new { @class = "form-control", type = "number", id = "Preco", placeholder = "Preco", Style = "height:34px;" })
                                </div>

                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="Opcional">Opcional</label>
                                    @Html.DropDownListFor(m => m.Opcional, (SelectList)ViewData["Opcional"], new { @class = "form-control", id = "Opcional", placeholder = "Selecione", Style = "height:34px;", @required = "required" })
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="ICarros">Pacote ICarros</label>
                                    @Html.DropDownListFor(m => m.PacoteICarros, (SelectList)ViewData["ICarros"], new { @class = "form-control", id = "ICarros", placeholder = "Selecione", Style = "height:34px;", @required = "required" })
                                </div>

                                <div class="col-lg-6 col-sm-12 form-group" style="text-align:left;">
                                    <label for="WebMotors">Pacote WebMotors</label>
                                    @Html.DropDownListFor(m => m.PacoteWebMotors, (SelectList)ViewData["WebMotors"], new { @class = "form-control", id = "WebMotors", placeholder = "Selecione", Style = "height:34px;", @required = "required" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-sm-12 form-group " style="padding-top: 20px;">
                                    <label for="file">Fotos</label>
                                    @* <input type="file" id="file" multiple="multiple"/> *@
                                    @Html.TextBoxFor(m => m.Fotos, new { @class = "form-control", type = "file", id = "Fotos", multiple = "multiple" })
                                    @if (@Model.Id > 0)
                                    {
                                        @* <a href="@Model.Uri" target="_blank" id="nomeArquivo">@Model.Uri.Split("/").Last()</a> *@
                                        <div class="form-group fileName">
                                            <label class="alterar hide">Novas Fotos:&nbsp;</label>
                                            <span id="nomeArq"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span id="nomeArq"></span>
                                    }

                                </div>

                                <div class="col-lg-6 col-sm-12 form-group" style="padding-top:20px;">
                                    <span class="btn btn-default" id="btnCancel"><a href="@Url.Action("ConsultarVeiculos", "Veiculo")">Cancelar</a></span>
                                    <span class="btn btn-success" id="btnSave"><i class="fa fa-check"></i><span class="bold">Salvar</span></span>
                                </div>

                            </div>
                    </div>
                     }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @*  <script type="text/javascript" src="~/lib/iCheck/icheck.min.js"></script>
        <script type="text/javascript" src="~/lib/datapicker/bootstrap-datepicker.js"></script>
        <script type="text/javascript" src="~/lib/datapicker/locales/bootstrap-datepicker.pt-BR.min.js"></script>
        <script type="text/javascript" src="~/lib/select2/select2.full.min.js"></script>
        <script type="text/javascript" src="~/lib/select2/i18n/pt-BR.min.js"></script>
        <script type="text/javascript" src="~/lib/ladda/spin.min.js"></script>
        <script type="text/javascript" src="~/lib/ladda/ladda.min.js"></script>
        <script type="text/javascript" src="~/lib/ladda/ladda.jquery.min.js"></script>
        <script type="text/javascript" src="~/lib/validate/jquery.validate.min.js"></script>
        <script type="text/javascript" src="~/lib/validate/additional-methods.js"></script>
        <script type="text/javascript" src="~/lib/validate/validate-ptbr.js"></script>
        <script type="text/javascript" src="~/js/app/AnexoDetalhe.js?version=1"></script> *@
}